@using MyAspNetCoreApp.Web.ViewModels;


@model ProductListPartialViewModel

<h1>Ürünler</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
        <th>Ürün Id</th>
        <th>Ürün Adı</th>
        <th>Ürün Ücreti</th>
        <th>Ürün Stok</th>
            </tr>
        </thead>
    <tbody>
    @foreach(var item in Model.Products)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
         </tr>
    }
    </tbody>
    </table>