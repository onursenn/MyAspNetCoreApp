@model VisitorViewModel

<h1 style="text-align:center">Site Yorum Ekranı</h1>

<form asp-controller="Home" asp-action="SaveVisitor" method="post">

        @if (TempData["Alert"] != null)
        {
               <div class="alert alert-warning" role="alert"> @TempData["Alert"]</div>

        }

    <div class="mb-3">
        <label asp-for="Name" class="form-label" >Ad Soyad</label>
        <input asp-for="Name"  class="form-control" > 
    </div>
    <div class="mb-3 form-floating">
        <textarea class="form-control" placeholder="Yorumunuz" asp-for="Comment"></textarea>
        <label asp-for="Comment">Yorumunuz</label>
    </div>

    <button type="submit" class="btn btn-primary mb-5">Kaydet</button>


    <h2>Kullanıcı Yorumları</h2>

    @foreach(var item in ViewBag.visitorViewModels as List<VisitorViewModel>)
    {
       <div class="card mb-3" >
  <div class="card-body">
    <h5 class="card-title">@item.Name</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">@item.Created.ToShortDateString()</h6>
    <p class="card-text">@item.Comment</p>
  </div>
</div>
        

    }

</form>
