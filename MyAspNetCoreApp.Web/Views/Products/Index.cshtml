
@{
    ViewData["Title"] = "Index";
}

@model List<ProductViewModel>

<h1 style="text-align:center">ÜRÜNLER</h1>



@if (TempData["Uyarı"] != null)
{
    <div class="alert alert-primary" role="alert"> @TempData["Uyarı"]</div>
}

<table class="table" style="text-align: center">
      <thead>
          <tr>

          <th>Id</th>
          <th>İsim</th>
          <th>Fiyatı(TL)</th>
          <th>Stok</th>
          <th>Renk</th>
          <th>Ürün Açıklaması</th>
          <th>İşlem </th>
            <td> <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Add">Ürün Ekle</a></td>
          
        </tr>
      </thead>
    <tbody>

@foreach(var item in Model)
{
    <tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>@item.Stock</td>
    <td>@item.Color</td>
    
                <td>
                    @if (item.TextArea.Length > 20)
                    {
                        @item.TextArea.Substring(0,20) <text>...</text>
                    }
                    else
                    {
                        @item.TextArea
                    }
                </td>
    <td>
      
      <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
      <a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
      <a asp-controller="Products" asp-action="GetById" asp-route-productid="@item.Id">Ürün Sayfası</a>
    </td>

    </tr>
}
    </tbody>

    <a asp-controller="Products" asp-action="pages" asp-route-page="1" asp-route-pageSize="3">Listede İlk 3 ürün</a>
    <br />
    <a asp-controller="Products" asp-action="pages" asp-route-page="2" asp-route-pageSize="3">Listede İkinci 3 ürün</a>
    <br />
    <a asp-controller="Products" asp-action="pages" asp-route-page="3" asp-route-pageSize="3">Listede Üçüncü 3 ürün</a>

    </table>

    